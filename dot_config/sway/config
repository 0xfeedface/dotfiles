### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
# set $term kitty
set $term alacritty
# Your preferred application launcher
# set $menu dmenu_run
# set $menu termite --name=launcher -e "bash -c 'compgen -c | sort -u | fzf --no-extended --print-query | tail -n1 | xargs -r swaymsg -t command exec'"
set $menu wofi --show drun
for_window [app_id="^launcher$"] floating enable, border none
# Solarized colors
set $S_base_3   #00202a
# set $S_base_3   #002b36
set $S_base_2   #073642
set $S_base_1   #586e75
set $S_base_0   #657b83
set $S_base0    #839496
set $S_base1    #93a1a1
set $S_base2    #eee8d5
set $S_base3    #fdf6e3
set $S_yellow   #b58900
set $S_orange   #cb4b16
set $S_red      #dc322f
set $S_magenta  #d33682
set $S_violet   #6c71c4
set $S_blue     #268bd2
set $S_cyan     #2aa198
set $S_green    #859900

smart_gaps off
gaps outer 0
gaps inner 4

### Color configuration
#
# Color class           border      background  text        indicator   child border
client.focused          $S_yellow   $S_yellow   $S_base_3   $S_magenta  $S_yellow
# client.focused          $S_base1    $S_base1    $S_base_3   $S_magenta  $S_base1
client.focused_inactive $S_base_1   $S_base_1  $S_base_3  $S_base_1     $S_base_1
client.unfocused        $S_base_2   $S_base_2  $S_base_1  $S_base_2     $S_base_2
# client.background       $S_base_2

font Iosevka 11

include output.conf

### Output configuration
